# -*- MakeFile -*-

# all: example1 example2

#target: dependencies
#   action

NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
CC = gcc
RM = rm -f

all: $(NAME)
clean:
	$(RM) *~ .*.swp $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) *~ .*.swp $(NAME)
	$(RM) $(OBJ)
re: fclean school

school: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
